%h1 Listing todos

%table
  %tr
    %th Name
    %th Basecamp
    %th Points
    %th Completed
    %th List
    %th
    %th
    %th

  - @todos.each do |todo|
    %tr
      %td= todo.name
      %td= todo.basecamp_id
      %td= todo.points
      %td= todo.completed
      %td= todo.list
      %td= link_to 'Show', todo
      %td= link_to 'Edit', edit_todo_path(todo)
      %td= link_to 'Destroy', todo, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Todo', new_todo_path
